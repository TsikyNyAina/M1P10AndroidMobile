<!-- res/drawable/custom_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#0000" /> <!-- Replace @color/border_color with the desired color -->

    <!-- Corner radius (optional) -->
    <corners android:radius="20dp" /> <!-- Replace 4dp with the desired corner radius -->

    <!-- Background color (optional) -->
    <solid android:color="#f7f7f7" /> <!-- Replace @color/your_background_color with the desired background color -->

</shape>